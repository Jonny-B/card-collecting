{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
  "outDir": "build",
  "rootDir": "src",
  "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  "resolveJsonModule": true,
  "allowImportingTsExtensions": true
  },
  "include": ["src"]
}
